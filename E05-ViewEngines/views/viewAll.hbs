<header>
    <div class="inner">
        <nav>
            <a href="/" class="logo">
                <img class="logo" src="/static/images/expressjs-card.png" alt="expressLogo">
            </a>
            <input type="checkbox" id="nav" />
            <label for="nav"></label>
            <ul>
                <li>
                    <a href="/addBook">Add Book</a>
                </li>
                <li>
                    <a href="/viewAllBooks">View All Books</a>
                </li>
            </ul>
        </nav>
    </div>
</header>

<h1>Here are your books</h1>
<div class="container">
    {{#each books}}
    <div class="book">
        <a href="#">
            <img class="bookPoster" src="/static/images/{{bookname}}" />
        </a>
    </div>
    {{/each}}
</div>